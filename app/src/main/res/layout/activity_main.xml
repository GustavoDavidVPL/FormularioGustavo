<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityFormulario_2"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="Gustavo.itt.AppGustavoFormulario">

    <TextView
        android:id="@+id/textFormulario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="?attr/colorControlHighlight"
        android:gravity="center"
        android:text="FORMULARIO"

        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Nombre"
        android:inputType="text"
        android:textColorLink="@android:color/holo_green_light" />

    <EditText
        android:id="@+id/txtVilla"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Direccion"
        android:inputType="text"
        android:textColorLink="@android:color/holo_green_light" />

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Telefono"
        android:inputType="text"
        android:textColorLink="@android:color/holo_green_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bfecha"
            style="@style/Base.ThemeOverlay.AppCompat.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:onClick="Fecha_Pick"
            android:text="Fecha"
            android:textColorLink="@android:color/holo_green_light" />

        <EditText
            android:id="@+id/txtFecha"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorLink="@android:color/holo_green_light" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="120dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:weightSum="1">

        <!-- <DatePicker
            android:id="@+id/simpleDatePicker"
            android:layout_width="443dp"
            android:layout_height="315dp"
            android:datePickerMode="spinner"
            android:layout_weight="0.22" />
                -->

        <Button
            android:id="@+id/ButtonEnviar"
            style="@style/Base.ThemeOverlay.AppCompat.Dark"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@android:color/holo_green_dark"
            android:text="REGISTRAR"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColorLink="@android:color/background_light" />


    </LinearLayout>

</LinearLayout>





